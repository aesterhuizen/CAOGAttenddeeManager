<Window x:Class="CAOGAttendeeProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAOGAttendeeProject"
        mc:Ignorable="d"
        Title="CAOG Attendee Manager" Height="500" Width="1000"
        Loaded="Window_Loaded">


    <DockPanel>

        <Ribbon DockPanel.Dock="Top" Title="Attendee Manager" SelectionChanged="Ribbon_SelectionChanged">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu Label="File">
                    <RibbonApplicationMenuItem Header="Exit" Click="RibbonApplicationMenuItem_Click_Exit" ImageSource="Resources\Exit.ico"/>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <!-- Home Tab ############################################################################################-->
            <RibbonTab Name="tabHome" Header="Attendance">
                <RibbonGroup Header="Search">
                    <RibbonTextBox Name="txtSearch" SmallImageSource="Resources\Search.ico" Text=""
                                   TextBoxWidth="160"
                                   TextChanged="txtSearch_TextChanged" 
                                   ToolTip="Attendee Search" />
                    <!--  <RibbonButton Margin="0,0,0,0" x:Name="btnNewRec" 
                                      Label="New Attendee" 
                                      SmallImageSource="Resources\NewRec.ico" 
                                      Click="btnNewRec_Click" 
                                      ToolTip="Add new church attendee to the database"/>
                            -->
                  
                </RibbonGroup>
                <RibbonGroup Header="Filter options" Width="180">

                    <Grid Height="70">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Width="150" IsEditable="True" Name="cmbDate" Grid.Row="0" Grid.ColumnSpan="2" 
                                        
                                        ToolTip="Date attendee attended church in the format (mm-dd-yyyy). Press Enter when done.">

                            <Calendar Name="DateCalendar"  SelectionMode="SingleDate" Loaded="DateCalendar_Loaded" 
                                      DisplayDateChanged="DateCalendar_DisplayDateChanged" 
                                      SelectedDatesChanged="DateCalendar_SelectedDateChanged"/>


                        </ComboBox>
                        <RibbonCheckBox Grid.Row="1" Grid.Column="0" Label="Date" Name="chkDateFilter" Checked="chkDateFiler_Checked" Unchecked="chkDateFiler_Unchecked" FontSize="10" Margin="-22,0,0,0"/>
                        <RibbonCheckBox Grid.Row="1" Grid.Column="1" Label="Attended" Name="chkAttended" Checked="chkAttended_Checked" Unchecked="chkAttended_Unchecked" FontSize="10" Margin="-8,0,0,0" />
                        <RibbonCheckBox Grid.Row="2" Grid.Column="0" Label="Follow-Up" Name="chkFollowup" Checked="chkFollowup_Checked" Unchecked="chkFollowup_Unchecked" FontSize="10" Margin="0,0,0,0"/>
                        <RibbonCheckBox Grid.Row="2" Grid.Column="1" Label="Responded" Name="chkResponded" Checked="chkResponded_Checked" Unchecked="chkResponded_Unchecked" FontSize="10" Margin="0,0,0,0"/>
                        
                    </Grid>


                </RibbonGroup>
                <RibbonGroup Header="View">

                  <!--  <RibbonToggleButton x:Name="btnAttendeeList" Width="96" Label="Attendee List" 
                                      SmallImageSource="Resources\Checklist2.ico" 
                                      Height="22" 
                                      Click="btnAttendeeList_Click" 
                                      ToolTip="Allows the user to  check off or add new church attendees for the day display in the date dropdown box." HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    -->
                   <!-- <RibbonToggleButton x:Name="btnFollowUp" Margin="0,0,-10,0" Width="96" Label="Filter Mode" 
                                      SmallImageSource="Resources\FilterAdd.ico" 
                                      Height="22" 
                                      Click="btnFollowUp_Click" 
                                      ToolTip="Allows the user to filter church attendees by using the filter options" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    -->
                    <RibbonButton x:Name="btnChart" Label="Charts"  
                                      LargeImageSource="Resources\Chart2.ico" 
                                      Click="btnChart_Click" 
                                      ToolTip="Allows the user to  check add church attendees for the day." HorizontalAlignment="Left" VerticalAlignment="Top" />

                </RibbonGroup>

            </RibbonTab>
            <!--Attendee List Tab #######################################################################################-->
            <RibbonTab Name="tabAttendeeList" Header="Attendee Check List">

                <RibbonGroup Header="Search">
                    <RibbonTextBox Name="alisttxtSearch" SmallImageSource="Resources\Search.ico" Text=""
                                   TextBoxWidth="160"
                                   TextChanged="alisttxtSearch_TextChanged" 
                                   ToolTip="Attendee Search" />

                    <!--  <RibbonButton Margin="0,0,0,0" x:Name="btnNewRec" 
                                      Label="New Attendee" 
                                      SmallImageSource="Resources\NewRec.ico" 
                                      Click="btnNewRec_Click" 
                                      ToolTip="Add new church attendee to the database"/>
                            -->




                      
                </RibbonGroup>
                <RibbonGroup Header="Date" >


                    <ComboBox Width="150" IsEditable="True" Name="alistcmbDate" 
                                    GotFocus="alistcmbDate_GotFocus" 
                                    LostFocus="alistcmbDate_LostFocus" 
                                    KeyUp="alistcmbDate_KeyUp" 
                                    ToolTip="Date attendee attended church in the format (mm-dd-yyyy)">
                        
                        <Calendar Name="alistDateCalendar"  
                                  SelectionMode="SingleDate" 
                                  Loaded="alistDateCalendar_Loaded" 
                                  DisplayDateChanged="alistDateCalendar_DisplayDateChanged" 
                                  SelectedDatesChanged="alistDateCalendar_SelectedDatesChanged"/>
                    </ComboBox>


                </RibbonGroup>
                <RibbonGroup Header="Table Operations">
                    
                
                <RibbonToggleButton x:Name="btnNewRec" 
                                  Width="150"
                                  Label="Insert\New Attendee    " 
                                  SmallImageSource="Resources\NewRec.ico" 
                                  Click="btnNewRec_Click" 
                                  ToolTip="Insert a new Attendee into the database." HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <RibbonButton x:Name="btnSaveUpdate" 
                                  Width="150"
                                  Label="Save\Update" 
                                  SmallImageSource="Resources\ApplyChanges.ico" 
                                  Click="btnApplyChanges_Click" 
                                  ToolTip="Save all change to the database"/>

                    <RibbonButton x:Name="btnPrint" 
                                  Width="150"
                                  Label="Print Table" 
                                  SmallImageSource="Resources\Print.ico" 
                                  Click="btnPrint_Click" 
                                  ToolTip="Print this table"/>
                    
                </RibbonGroup>
              <!--  <RibbonGroup Header="Save Status">
                    <TextBlock Name="txtSaveStatus" Width="120"/>
                </RibbonGroup>
                -->
            </RibbonTab>
            <!-- End AttendeeList #########################################################################-->
        </Ribbon>

        <Grid DockPanel.Dock="Bottom" Margin="2" ShowGridLines="True" >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <DataGrid Name="dataGrid" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False" 
                      CanUserReorderColumns="False" ItemsSource="{Binding}" 
                      MouseRightButtonUp="dataGrid_MouseRightButtonUp" 
                      SelectionMode="Single"  
                      SelectionChanged="dataGrid_SelectionChanged"/>

            <!-- <DataGrid Name="dataGrid" CanUserAddRows="True" CanUserDeleteRows="True" CanUserSortColumns="True" CanUserReorderColumns="False" ItemsSource="{Binding}" MouseRightButtonUp="dataGrid_MouseRightButtonUp" DataContextChanged="dataGrid_DataContextChanged" SelectionChanged="dataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn IsThreeState="False" Binding="{Binding, UpdateSourceTrigger=PropertyChanged}"></DataGridCheckBoxColumn>
                    
                </DataGrid.Columns>
            -->
            



            
        </Grid>


    </DockPanel>

</Window>
