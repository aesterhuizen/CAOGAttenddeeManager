<Window x:Class="CAOGAttendeeManager.SeachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window1" Height="28" Width="147"
        ResizeMode="NoResize" WindowStyle="None"
        BorderThickness="1"
        Loaded="Window_Loaded"
        >
    <Grid >
        <TextBox Grid.Column="0"  Name="txtHeaderLastName" Text="Seach for lastname"
                                            BorderThickness="0"
                                                     GotFocus="TxtHeaderLastName_GotFocus" 
                                                     LostFocus="TxtHeaderLastName_LostFocus"
                                                     KeyUp="TxtHeaderLastName_KeyUp" 
                                                     PreviewMouseLeftButtonUp="TxtHeaderLastName_PreviewMouseLeftButtonUp"
                                                     TextChanged="txtSearch_TextChanged_LName" FontSize="11" 
                                                        HorizontalAlignment="Left" 
                                                    VerticalAlignment="Center" 
                                                     Opacity="0.5" Width="140" SelectionOpacity="0" Height="17"/>
    </Grid>
</Window>
